{
  "$schema": "../.stranger-quarkdown/squarkdown/resources/squarkup-schema.json",

  "repo": "integrity",
  "site": "site",

  "sources": [
    "docs/",
    "guides/"
  ],
  "site-data": "src/data/site.json",
  "dest": "src/routes/",

  "if-no-dir": ["warn", "create"],
  "on-error": "kill",

  "bases": "src/parts/base/",
  "page.svelte": "page.svelte",
  "page.js": "page.js",
  "assets": "assets",
  "site-assets": "assets/site",
  "fonts": [
    "Geologica:slnt,wght,CRSV@-12..0,100..900,1",
    "Crimson+Pro:ital,wght@0,200..900;1,200..900"
  ]
}
