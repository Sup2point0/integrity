{
  "$schema": "../.stranger-quarkdown/squarkdown/resources/squarkup-schema.json",

  "repo": "Integrity",

  "paths / site": "site/",
  "paths / sources": [
    "./",
    ".squarkdown/content/",
    "docs/",
    "scriptures/",
    "fun/",
    "desmos/"
  ],
  "paths / dest": "src/routes/",

  "out / file-name": "~content",
  "out / site-data": "src/data/site.json",

  "opts / if-no-dir": ["warn", "create"],
  "opts / on-error": "kill",

  "assets / path": "assets/",
  "assets / site-assets": "assets/site/",
  "fonts / queries": [
    "Geologica:slnt,wght,CRSV@-12..0,100..900,1",
    "Crimson+Pro:ital,wght@0,200..900;1,200..900"
  ]
}
